{
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "./backend/Dockerfile",
        "watchPatterns": [
            "backend/requirements.txt",
            "backend/Dockerfile",
            "backend/manage.py",
            "backend/config/**",
            "backend/apps/**",
            "backend/phone_auth/**",
            "backend/static/**",
            "backend/railway.json"
        ]
    },
    "deploy": {
        "startCommand": "./startup.sh",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}